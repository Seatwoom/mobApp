{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["entity/**.ts"],
  "exclude": ["node_modules"]
}
